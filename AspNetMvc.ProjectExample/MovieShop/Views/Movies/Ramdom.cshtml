@model MovieShop.ViewModel.RandomMovieViewModel
@{
    ViewBag.Title = "Ramdom";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h2>Ramdom</h2>*@

@{
    var className = Model.Customers.Count > 5 ? "pupular" : null;
}

<h2 class="@className">@Model.Movie.Name</h2>

@if (Model.Customers.Count == 0)
{
    //Insteand of using p tag, we can use <text>, but this is not a standard control, but razor understands.
    <p>No one has rented this movie before.</p>
}
else
{
    <ul>
        @*We can write any statements inside the foreach loop and html code also.*@
        @foreach (var customer in Model.Customers)
        {
            <li>@customer.Name</li>
        }
    </ul>
}


